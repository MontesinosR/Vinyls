
<div class="vinyl-wrapper">
  <div class="container">
    <!-- Search bar -->
    <%= simple_form_for :search, url: vinyls_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" value="<%= params["query"]%> "type="text" name="query" id="search_query" />
    <button name="button" type="submit" id="form-button" class="btn-search">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
  <% end %>
    <h1 class="index-title">Vinyls near you...</h1>
    <!-- Display of index cards -->
    <div class="cards">
      <% @vinyls.each do |vinyl| %>
      <div class="card-vinyl">
        <img src="https://images-na.ssl-images-amazon.com/images/I/81pe85y7VjL._AC_SL1500_.jpg" />
        <div class="card-vinyl-info">
          <h2><%= link_to vinyl.album_name, vinyl_path(vinyl), class: "album-name" %></h2>
          <p>Artist: <%= vinyl.artist %></p>
          <p>Condition: <%= vinyl.condition %></p>
          <p>Genre: <%= vinyl.genre %></p>
          <p>Daily rate <%= vinyl.daily_rate %>$</p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
   <div class="map">
      <img src="http://www.techautos.com/wp-content/uploads/2010/12/Map-City.jpg" alt="map image">
    </div>
</div>
