      <div class="wrapper">
        <% @bookings_bought_pending.each do |booking| %>
            <%= link_to vinyl_path(booking.vinyl) do %>
              <div class="card-trip">
                <img src="https://images-na.ssl-images-amazon.com/images/I/91ksS-ioRpL._SL1500_.jpg" />

                <div class="card-trip-infos">
                  <div class="card-trip-text">
                    <h2><strong><%= booking.vinyl.album_name %></strong> by <strong><%= booking.vinyl.artist %></strong></h2>
                  </div>
                  <div class="booking-info">
                    <p class="card-trip-dates"><%= booking.start_date %> - <%= booking.end_date %></p>
                    <h2 class="card-trip-pricing"> <%= booking.vinyl.daily_rate %> € </h2>
